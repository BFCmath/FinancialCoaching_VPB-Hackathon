# VPBank Financial Coach Backend - Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB connection URL
# Local MongoDB: mongodb://localhost:27017
# MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net
MONGO_URL="mongodb://localhost:27017"

# Database name for the application
DATABASE_NAME="vpbank_dev"

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Secret Key - MUST be changed in production
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
# Or with: openssl rand -hex 32
JWT_SECRET_KEY="your_super_strong_randomly_generated_secret_key_here_change_this_in_production"

# JWT Algorithm (default: HS256)
JWT_ALGORITHM="HS256"

# JWT Token expiration time in minutes (default: 30)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================

# Google Gemini API Key for AI chat functionality
# Get your API key from: https://aistudio.google.com/
# Required for /api/chat/ endpoints to work
GOOGLE_API_KEY="your_google_gemini_api_key_here"

# AI Model Configuration
MODEL_NAME="gemini-2.0-flash-exp"
LLM_TEMPERATURE=0.1

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Debug mode (true for development, false for production)
DEBUG=true

# Environment name
ENVIRONMENT="development"

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed CORS origins for frontend integration (JSON array format)
# Development examples included
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://127.0.0.1:3000", "http://localhost:8080"]

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# API Server Configuration
HOST="0.0.0.0"
PORT=8000

# Logging Configuration
LOG_LEVEL="info"

# Rate Limiting (if implemented)
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================

# For production deployment, override these values:
# DEBUG=false
# ENVIRONMENT="production"
# CORS_ORIGINS=["https://your-frontend-domain.com"]
# Use strong, unique JWT_SECRET_KEY
# Use MongoDB Atlas or secure MongoDB instance
# Set appropriate LOG_LEVEL

# =============================================================================
# DEVELOPMENT NOTES
# =============================================================================

# 1. Never commit .env with real secrets to version control
# 2. Generate a unique JWT_SECRET_KEY for each environment
# 3. Use environment-specific database names
# 4. Update CORS_ORIGINS to match your frontend URLs
# 5. Get Google API key if you plan to use AI chat features
